#!/usr/bin/env python
import sys
from pathlib import Path

import card_live_dashboard.app

if __name__ == '__main__':
    if len(sys.argv) > 1:
        data_dir = Path(sys.argv[1])
    else:
        data_dir = card_live_dashboard.app.DEFAULT_DATA_DIR

    app = card_live_dashboard.app.build_app(data_dir)
    app.run_server(debug = True,
                  port = 8050,
                  host = '0.0.0.0')


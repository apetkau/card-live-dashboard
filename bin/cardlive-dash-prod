#!/bin/sh
# Runs CARD:Live dashboard via gunicorn
# This script used to keep track of standard options to gunicorn to run application.

card_live_home=$1

if [ "${card_live_home}" = "" ]
then
  gunicorn --workers 2 -b 0.0.0.0:8050 'card_live_dashboard.app:flask_app()' --timeout 180 --log-level debug
else
  gunicorn --workers 2 -b 0.0.0.0:8050 "card_live_dashboard.app:flask_app(card_live_home='${card_live_home}')" --timeout 180 --log-level debug
fi